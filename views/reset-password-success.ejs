<!DOCTYPE html>
<html lang="ko">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>RouteSnap</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
  </head>
  <body class="d-flex justify-content-center align-items-center vh-100">
    <div class="text-center">
      <h1 class="mb-4">비밀번호 재설정이 완료되었습니다😄</h1>
      <h2 id="welcome-sec" class="mb-4">3초 뒤에 로그인 페이지로 이동합니다🚀</h2>
      <a href="/login" class="btn btn-primary">지금 바로 이동</a>
    </div>

    <script>
      // 카운트다운 시작 함수
      function startCountdown(seconds) {
        let remainingSeconds = seconds;

        // 1초마다 카운트다운 업데이트
        const countdownIntervalId = setInterval(() => {
          remainingSeconds--;

          // 카운트다운 텍스트 갱신
          $("#welcome-sec").text(
            `${remainingSeconds}초 뒤에 로그인 페이지로 이동합니다🚀`,
          );

          // 카운트다운이 끝나면 인터벌 중지
          if (remainingSeconds === 0) {
            clearInterval(countdownIntervalId);
            window.location.href = "/login"; // 메인 페이지로 이동
          }
        }, 1000);
      }

      // 카운트다운 시작 (3초)
      startCountdown(3);
    </script>
  </body>
</html>
