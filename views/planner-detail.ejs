                      <path fill-rule="evenodd" d="M8 3a5 5 0 1 0 4.546 2.914.5.5 0 0 1 .908-.417A6 6 0 1 1 8 2z"/>
                      <path d="M8 4.466V.534a.25.25 0 0 1 .41-.192l2.36 1.966c.12.1.12.284 0 .384L8.41 4.658A.25.25 0 0 1 8 4.466"/>
                    </svg>
                  </button>
                </div>
              </div>

              <hr />

              <div class="schedules-container">
                <% if (schedules.length > 0) { %> <% schedules.forEach(schedule => { %>
                <div
                  class="schedule-card mb-3"
                  id="schedule-item-<%= schedule.schedule_id %>"
                >
                  <input
                    type="hidden"
                    name="schedule-id"
                    value="<%= schedule.schedule_id %>"
                  />
                  <div class="card">
                    <div class="card-body">
                      <p class="card-text">
                        Ï∂úÎ∞ú -
                        <strong><%= schedule.departure_location %></strong>
                      </p>
                      <p class="card-text">
                        ‚Æë <%= schedule.transportation_mode %> [ ÏïΩ <%=
                        schedule.travel_time %> ] Ïù¥Îèô
                      </p>
                      <p class="card-text">
                        ÎèÑÏ∞© -
                        <strong><%= schedule.arrival_location %></strong> [ <%
                        if (schedule.stay_duration >= 60) { %>
                        <%= Math.floor(schedule.stay_duration / 60) %>ÏãúÍ∞Ñ
                        <%= schedule.stay_duration % 60 %>Î∂Ñ
                        <% } else { %>
                        <%= schedule.stay_duration %>Î∂Ñ
                        <% } %>
                        ] Ï≤¥Î•ò
                      </p>
                      <% if (schedule.quick_memo !== null && schedule.quick_memo !== "") { %>
                      <p class="card-text">
                        üìã - <%= schedule.quick_memo %>
                      </p>
                      <% } %>
                      <button class="schedule-delete-btn btn btn-danger btn-sm">
                        ÏÇ≠Ï†ú
                      </button>
                      <button class="schedule-edit-btn btn btn-warning btn-sm">
                        ÏàòÏ†ï
                      </button>
                      <button 
                      class="schedule-detail-btn btn btn-secondary btn-sm"
                      data-scheduleId="<%= schedule.schedule_id %>"
                      data-departure="<%= schedule.departure_location %>"
                      data-transportation="<%= schedule.transportation_mode %>"
                      data-arrival="<%= schedule.arrival_location %>"
                      >
                        ÏÉÅÏÑ∏ Ï†ïÎ≥¥
                      </button>
                    </div>
                  </div>
                </div>
                <% }) %>
                <% } else { %>
                <p>ÏùºÏ†ïÏù¥ ÏóÜÏäµÎãàÎã§.</p>
                <% } %>
              </div>

              <button id="add-schedule" class="btn btn-primary">
                ÏùºÏ†ï Ï∂îÍ∞ÄÌïòÍ∏∞
              </button>

              <div class="add-schedule mt-4" style="display: none">
                <form action="/planner/add-schedule" method="POST">
                  <input
                    type="hidden"
                    name="planner_id"
                    id="planner_id"
                    value="<%= planner.planner_id %>"
                  />

                  <div class="mb-3">
                    <input
                      type="text"
                      id="departure_location"
                      name="departure_location"
                      class="form-control"
                      placeholder="Ï∂úÎ∞úÏßÄ* (ÏûêÏÑ∏Ìûà ÏûÖÎ†•Ìï†ÏàòÎ°ù Ï†ïÌôïÎèÑÍ∞Ä ÎÜíÏïÑÏßëÎãàÎã§.)"
                    />
                  </div>

                  <div class="mb-3">
                    <select
                      name="transportation_mode"
                      id="transportation_mode"
                      class="form-select"
                      style="width: 120px"
                    >
                      <option value="" disabled selected>Ïù¥Îèô ÏàòÎã®*</option>
                      <option value="walk">üö∂</option>
                      <option value="car">üöó</option>
                      <option value="transit">üöá/üöå</option>
                    </select>
                  </div>

                  <div class="mb-3">
                    <input
                      type="text"
                      id="arrival_location"
                      name="arrival_location"
                      class="form-control"
                      placeholder="ÎèÑÏ∞©ÏßÄ* (ÏûêÏÑ∏Ìûà ÏûÖÎ†•Ìï†ÏàòÎ°ù Ï†ïÌôïÎèÑÍ∞Ä ÎÜíÏïÑÏßëÎãàÎã§.)"
                    />
                  </div>

                  <div class="mb-3">
                    <label for="stay_duration_hours">Î®∏Î¨º ÏãúÍ∞Ñ(ÏÑ†ÌÉù)</label>
                    <input
                      type="number"
                      id="stay_duration_hours"
                      name="stay_duration_hours"
                      class="form-control d-inline-block"
                      style="width: 60px"
                      min="0"
                      max="24"
                      value="0"
                    />
                    ÏãúÍ∞Ñ
                    <input
                      type="number"
                      id="stay_duration_minutes"
                      name="stay_duration_minutes"
                      class="form-control d-inline-block"
                      style="width: 60px"
                      min="0"
                      max="59"
                      value="0"
                    />
                    Î∂Ñ
                  </div>

                  <div class="mb-3">
                    <input
                      type="text"
                      id="quick_memo"
                      name="quick_memo"
                      class="form-control"
                      placeholder="ÌÄµ Î©îÎ™® (ÏµúÎåÄ 255Ïûê)"
                      maxlength="255"
                    />
                  </div>

                  <div class="mb-3">
                    <button type="button" id="schedule-cancel-btn" class="btn btn-secondary">
                      Ï∑®ÏÜå
                    </button>
                    <button
                      type="submit"
                      id="schedule-add-btn"
                      class="btn btn-success"
                    >
                      ÏùºÏ†ï Ï∂îÍ∞ÄÌïòÍ∏∞ (ÏµúÎåÄ 10Ï¥à ÏÜåÏöî)
                    </button>
                  </div>
                </form>
                <div class="modal" id="errorModal" tabindex="-1" aria-hidden="true">
                  <div class="modal-dialog">
                    <div class="modal-content">
                      <div class="modal-header">
                        <h5 class="modal-title">ÏûÖÎ†• Ïò§Î•ò</h5>
                        <button
                          type="button"
                          class="btn-close"
                          data-bs-dismiss="modal"
                          aria-label="Close"
                        ></button>
                      </div>
                      <div class="modal-body">
                        <p>Î™®Îì† ÌïÑÏàò ÌïÑÎìúÎ•º Ï±ÑÏõåÏ£ºÏÑ∏Ïöî.</p>
                      </div>
                      <div class="modal-footer">
                        <button
                          type="button"
                          class="btn btn-secondary"
                          data-bs-dismiss="modal"
                        >
                          Îã´Í∏∞
                        </button>
                      </div>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          </div>
        </div>

        <!-- Ïò§Î•∏Ï™Ω: ÏßÄÎèÑ -->
        <div class="col-md-6">
          <div class="map mt-4">
            <iframe
              src="<%= mapUrl ? mapUrl : 'https://map.naver.com/p/directions/-/-/-/car?c=14.00,0,0,0,dh' %>"
              width="100%"
              height="600px"
            >
            </iframe>
          </div>
        </div>
      </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
    <script>
      function sendDeleteRequest(url, onSuccess, onError) {
        $.ajax({
          url: url,
          method: "DELETE",
          success: onSuccess,
          error: onError,
        });
      }

      function generateHeaderForm(planner_id, plannerName, eventDate) {
        let formattedDate = "";

        if (eventDate) {
          try {
            const dateParts = eventDate
              .replace(/ÎÖÑ|Ïõî|Ïùº/g, "")
              .trim()
              .split(" ");

            if (dateParts.length === 3) {
              formattedDate = `${dateParts[0]}-${dateParts[1].padStart(2, "0")}-${dateParts[2].padStart(2, "0")}`;
            }

            const date = new Date(formattedDate);
            if (isNaN(date)) {
              throw new Error("Invalid date format");
            }
          } catch (error) {
            console.error("Error processing eventDate:", eventDate, error);
            formattedDate = "";
          }
        }

        return `
    <form action="/planner/header/edit" method="POST" class="p-4 border rounded bg-light shadow-sm">
      <input type="hidden" name="planner-id" value="${planner_id}">

      <div class="mb-3">
        <label for="planner-name" class="form-label">ÌîåÎûòÎÑà Ïù¥Î¶Ñ</label>
        <input type="text" class="form-control" id="planner-name" name="planner-name" value="${plannerName}">
      </div>

      <div class="mb-3">
        <label for="event-date" class="form-label">ÎÇ†Ïßú</label>
        <input type="date" class="form-control" id="event-date" name="event-date" value="${formattedDate}">
      </div>

      <div class="d-flex justify-content-between">
        <button type="button" id="header-cancel-btn" class="btn btn-secondary">Ï∑®ÏÜå</button>
        <button type="submit" class="btn btn-primary">Ï†ÄÏû•</button>
      </div>
    </form>
  `;
      }

      function convertMinutesToHours(minutes) {
        const hours = Math.floor(minutes / 60);
        const mins = minutes % 60;
        return { hours, mins };
      }

      $("#add-schedule").click(() => {
        $("#add-schedule").hide();
        $(".add-schedule").show();
      });

      $(document).ready(function () {
        $("#schedule-add-btn").click(() => {
            // ÌèºÏùò Ï†úÏ∂ú Ïù¥Î≤§Ìä∏Î•º Í∞êÏßÄ
            $('form[action="/planner/add-schedule"]').on('submit', function (e) {
              e.preventDefault();
              const departure = $("#departure_location").val();
              const transportation = $("#transportation_mode").val();
              const arrival = $("#arrival_location").val();
              let quickMemo = $("#quick_memo").val();

              if (!departure || !transportation || !arrival) {
                $("#errorModal").modal("show");
                return;
              }

              $("#schedule-cancel-btn").hide();
              $("#schedule-add-btn").html("ÏòàÏÉÅ ÏÜåÏöî ÏãúÍ∞Ñ Í≥ÑÏÇ∞ Ï§ë...");

              $('form[action="/planner/add-schedule"]')[0].submit();
            });
        });
      });

      $("#schedule-cancel-btn").click(() => {
        $("form")[0].reset();

        $(".add-schedule").hide();
        $("#add-schedule").show();
      })

      $("#delete-planner-btn").click(() => {
        const result = confirm("Ï†ÑÏ≤¥ ÌîåÎûòÎÑàÎ•º ÏÇ≠Ï†úÌï†ÍπåÏöî?");
        const planner_id = $("#planner_id").val();

        if (result) {
          sendDeleteRequest(
            `/planner/detail/${planner_id}`,
            () => (window.location.href = "/dashboard"),
            (err) => console.error("ÏÇ≠Ï†ú Ïò§Î•ò: ", err),
          );
        }
      });

      $(".schedules-container").on("click", ".schedule-delete-btn", function () {
        const result = confirm("Ìï¥Îãπ Ïä§ÏºÄÏ§ÑÏùÑ ÏÇ≠Ï†úÌï†ÍπåÏöî?");
        const scheduleId = $(this)
          .closest(".schedule-card")
          .find('input[type="hidden"]')
          .val();

        if (result) {
          sendDeleteRequest(
            `/planner/schedule/${scheduleId}`,
            () => $(`#schedule-item-${scheduleId}`).remove(),
            (err) => console.error("ÏÇ≠Ï†ú Ïò§Î•ò: ", err),
          );
        }
      });

      $("#edit-planner-btn").click(function () {
          const planner_id = "<%= planner.planner_id %>";
          const plannerName = "<%= planner.planner_name %>";
          const eventDate = "<%= planner.event_date %>";

          const headerForm = generateHeaderForm(planner_id, plannerName, eventDate);

          $(".header-box").html(headerForm);
      });

      $(".schedules-container").on("click", ".schedule-edit-btn", function () {
        const planner_id = "<%= planner.planner_id %>";

        const scheduleId = $(this)
          .closest(".schedule-card")
          .find('input[type="hidden"]')
          .val();

        const schedules = <%- JSON.stringify(schedules) %>;

        const scheduleData = schedules.find(
          (schedule) => schedule.schedule_id == scheduleId,
        );
        
        if (scheduleData) {
          const scheduleItemDiv = $(
            `.schedule-card:has(input[type="hidden"][value="${scheduleId}"])`,
          );

          const travelTime = convertMinutesToHours(scheduleData.travel_time);
          const stayDuration = convertMinutesToHours(
            scheduleData.stay_duration,
          );

          const originalHTML = scheduleItemDiv.html();

          scheduleItemDiv.html(`
            <form action="/planner/schedule/edit" method="POST">
            <input type="hidden" name="planner-id" value="${planner_id}">
            <input type="hidden" name="schedule-id" value="${scheduleId}">

            <p>Ï∂úÎ∞ú<input type="text" name="departure_location" value="${scheduleData.departure_location}" class="form-control" required></p>

            <div class="mb-3">
              <p>
                Ïù¥Îèô ÏàòÎã®
              <select name="transportation_mode" class="form-select" required>
                <option value="walk" ${scheduleData.transportation_mode === 'üö∂' ? 'selected' : ''}>üö∂</option>
                <option value="car" ${scheduleData.transportation_mode === 'üöó' ? 'selected' : ''}>üöó</option>
                <option value="transit" ${scheduleData.transportation_mode === 'üöá/üöå' ? 'selected' : ''}>üöá/üöå</option>
              </select>
              </p>
            </div>

            <p>Ïù¥Îèô ÏãúÍ∞Ñ<input type="text" name="travel_time" value="${scheduleData.travel_time}" class="form-control" required /></p>

            <p>ÎèÑÏ∞©<input type="text" name="arrival_location" value="${scheduleData.arrival_location}" class="form-control" required /></p>

            <div class="mb-3">
              <label for="stay_duration_hours">Î®∏Î¨º ÏãúÍ∞Ñ</label>
              <br />
              <input type="number" name="stay_duration_hours" class="form-control d-inline-block" style="width: 60px" value="${stayDuration.hours}" required />
              ÏãúÍ∞Ñ
              <input type="number" name="stay_duration_minutes" class="form-control d-inline-block" style="width: 60px" value="${stayDuration.mins}" required />
              Î∂Ñ
            </div>

            <div class="mb-3 d-flex justify-content-end">
              <button type="submit" class="btn btn-success">Ï†ÄÏû•</button>
              <button type="button" id="schedule-edit-cancel-btn" class="btn btn-secondary ms-2">Ï∑®ÏÜå</button>
            </div>
          </form>
        `);

        $('#schedule-edit-cancel-btn').click(() => {
          scheduleItemDiv.html(originalHTML);
        });
        }
      });

      $(document).on('click', '#header-cancel-btn', () => {
          window.location.reload();
      });

      $(document).on('click', '.schedule-detail-btn', function () {
        const scheduleCard = $(this).closest('.schedule-card');
        const scheduleDetailBtn = $(this).closest('.schedule-detail-btn');
        
        const departure = scheduleCard.find('.card-text strong').eq(0).text();
        let transportation = scheduleCard
          .find('.card-text')
          .eq(1)
          .text()
          .trim()
          .split(' ')[1];
        switch(transportation){
          case "üöó": transportation = "car";
          break;
          
          case "üö∂": transportation = "walk";
          break;

          case "üöá/üöå": transportation = "transit";
          break;
        }
        const arrival = scheduleCard.find('.card-text strong').eq(1).text();
        const scheduleId = $(this).data('scheduleid');
        const plannerId = "<%= planner.planner_id %>";

        scheduleDetailBtn.prop("disabled", true).text("Î°úÎî© Ï§ë...");

        $.ajax({
          url: '/schedule/refresh',
          type: 'POST',
          contentType: 'application/json',
          data: JSON.stringify({
            plannerId: plannerId,
            scheduleId: scheduleId,
            departure: departure,
            transportation: transportation,
            arrival: arrival,
          }),
          success: function (response) {
            $('.schedule-detail-btn').prop("disabled", false).text("ÏÉÅÏÑ∏ Ï†ïÎ≥¥");
            console.log('ÏÑúÎ≤Ñ ÏùëÎãµ:', response);
            if (response) {
            window.location.href = response;
          }
          },
          error: function (xhr, status, error) {
            $('.schedule-detail-btn').prop("disabled", false).text("ÏÉÅÏÑ∏ Ï†ïÎ≥¥");
            console.error('Ïò§Î•ò Î∞úÏÉù:', error);
          },
        });
      })

      $("#refresh-planner-btn").click(function () {
        const schedules = <%- JSON.stringify(schedules) %>;

        $("#overlay").removeClass("d-none");

        $.ajax({
          url: "/api/refresh-all-travel-times",
          type: "POST",
          contentType: "application/json",
          data: JSON.stringify({ schedules }),
          success: function () {
            // ÏÑúÎ≤ÑÏóêÏÑú DB ÏóÖÎç∞Ïù¥Ìä∏ ÏôÑÎ£å ÌõÑ ÌéòÏù¥ÏßÄ ÏÉàÎ°úÍ≥†Ïπ®
            console.log("Ïä§ÏºÄÏ§Ñ Í∞±Ïã† ÏôÑÎ£å");
            location.reload(); // ÌéòÏù¥ÏßÄ ÏÉàÎ°úÍ≥†Ïπ®
          },
          error: function (err) {
            console.error("Ïä§ÏºÄÏ§Ñ Í∞±Ïã† Ï§ë Ïò§Î•ò Î∞úÏÉù:", err);
          },
          complete: function () {
            $("#overlay").addClass("d-none");
          },
        });
      });
    </script>
  </body>
</html>
